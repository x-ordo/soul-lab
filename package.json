{
  "name": "soul-lab",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "18.x"
  },
  "sideEffects": [
    "**/*.css",
    "./src/lib/analytics.ts",
    "./src/main.tsx"
  ],
  "scripts": {
    "dev": "granite dev",
    "dev:web": "vite",
    "build": "granite build",
    "build:web": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier -w .",
    "dev:server": "tsx watch server/src/index.ts",
    "start:server": "node server/dist/index.js",
    "build:server": "tsc -p server/tsconfig.json",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "vitest run src/test/accessibility.test.tsx",
    "test:server": "vitest run --config server/vitest.config.ts",
    "test:all": "vitest run && vitest run --config server/vitest.config.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "fastify": "^4.28.1",
    "ogl": "^1.0.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "yaml": "^2.8.2"
  },
  "comments": {
    "toss-packages": "Toss packages (@toss/tds-mobile, @toss/tds-mobile-ait, @apps-in-toss/web-framework) are mocked in src/mocks/ for standalone deployment"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.4.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^4.0.16",
    "vitest-axe": "^0.1.0"
  }
}
