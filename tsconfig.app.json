{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@toss/tds-mobile": ["./src/mocks/tds-mobile.tsx"],
      "@toss/tds-mobile-ait": ["./src/mocks/tds-mobile-ait.tsx"],
      "@apps-in-toss/web-framework": ["./src/mocks/web-framework.ts"]
    }
  },
  "include": ["src"]
}
